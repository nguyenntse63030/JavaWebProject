<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>sample.filter.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>sample.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>sample.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewDetailServlet</servlet-name>
        <servlet-class>sample.servlet.ViewDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowMarkTableServlet</servlet-name>
        <servlet-class>sample.servlet.ShowMarkTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFeedBackInfoServlet</servlet-name>
        <servlet-class>sample.servlet.GetFeedBackInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendOrRemoveFeedBackServlet</servlet-name>
        <servlet-class>sample.servlet.SendOrRemoveFeedBackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFeedBackServlet</servlet-name>
        <servlet-class>sample.servlet.RemoveFeedBackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendFeedBackServlet</servlet-name>
        <servlet-class>sample.servlet.SendFeedBackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteContentsServlet</servlet-name>
        <servlet-class>sample.servlet.WriteContentsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetContentsServlet</servlet-name>
        <servlet-class>sample.servlet.GetContentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewDetailServlet</servlet-name>
        <url-pattern>/ViewDetailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowMarkTableServlet</servlet-name>
        <url-pattern>/ShowMarkTableServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFeedBackInfoServlet</servlet-name>
        <url-pattern>/GetFeedBackInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendOrRemoveFeedBackServlet</servlet-name>
        <url-pattern>/SendOrRemoveFeedBackServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveFeedBackServlet</servlet-name>
        <url-pattern>/RemoveFeedBackServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendFeedBackServlet</servlet-name>
        <url-pattern>/SendFeedBackServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteContentsServlet</servlet-name>
        <url-pattern>/WriteContentsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetContentsServlet</servlet-name>
        <url-pattern>/GetContentsServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
        <!--<tracking-mode>COOKIE</tracking-mode>-->
    </session-config>
    <!--    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>-->
    <resource-ref>
        <res-ref-name>LongDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
